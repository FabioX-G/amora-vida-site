---
<div class="index-main">
  <section class="section hero hero--cinematic">
    <figure class="hero__backdrop">
      <picture>
        <!-- Desktop / large -->
        <source media="(min-width: 1280px)"
                srcset="/assets/images/hero/river-overview@2x.jpg 2x,
                        /assets/images/hero/river-overview.jpg 1x">
        <!-- Tablet -->
        <source media="(min-width: 768px)"
                srcset="/assets/images/hero/river-overview-tablet.jpg">
        <!-- Mobile -->
        <img src="/assets/images/hero/river-overview-mobile.jpg"
             alt="Panoramic view of Amora‚ÄìSeixal riverfront with greenery and water"
             loading="eager" fetchpriority="high" decoding="async">
      </picture>
    </figure>

    <div class="container hero__grid">
      <div class="hero__copy">
        <h1 class="hero__headline">
          Inspired by Nature, <span class="hero__accent">Built for Life.</span>
        </h1>
        <p class="hero__lead">
          Amora Vida acquires, develops, and exits strategic land projects in Greater Lisbon.
        </p>
      </div>
    </div>
  </section>

  <section id="home-opportunity" class="section section--base home-opportunity">
    <div class="container home-opportunity__body">
      <figure class="home-opportunity__media">
        <img class="is-primary-visual" src="{{ opportunity.image.src }}" alt="{{ opportunity.image.alt }}" loading="lazy" width="960" height="640">
      </figure>
      <div class="home-opportunity__content copy">
        <h2 class="section-heading">Current Opportunity</h2>
        <h3 class="home-opportunity__title with-heading-offset">Amora, Seixal Waterfront Estate</h3>
        <p class="home-opportunity__summary with-heading-offset">{{ opportunity.summary }}</p>
        <div class="home-opportunity__actions with-heading-offset">
          <a class="btn btn-primary" href="/land-opportunity/">Explore Current Opportunity</a>
        </div>
      </div>
    </div>
  </section>

  <section id="home-market" class="section section--slab home-market">
    <div class="container home-market__body">
      <h2 class="section-heading">{{ market.heading }}</h2>
      <div class="home-market__grid">
        <figure class="home-market__visual map-card">
          <img class="is-primary-visual" src="{{ market.visual.src }}" alt="{{ market.visual.alt }}" loading="lazy" width="960" height="640">
        </figure>
        <article class="home-market__content copy">
          <p>{{ market.summary }}</p>
          <a class="inline-link" href="{{ market.cta.url }}">{{ market.cta.label }}</a>
        </article>
      </div>
    </div>
  </section>

  <section id="home-approach" class="section section--base home-approach">
    <div class="container">
      <h2 class="section-heading">{{ approach.heading }}</h2>
      <div class="overview-grid overview-grid--simple">
        {% for item in approach.items %}
        <article class="overview-card overview-card--simple approach-card">
          <span class="overview-card__icon">{{ item.icon }}</span>
          <h3 class="overview-card__title">{{ item.title }}</h3>
          <p>{{ item.text }}</p>
        </article>
        {% endfor %}
      </div>
    </div>
  </section>

  <section id="home-team" class="section section--slab team-preview">
    <div class="container team-preview__container">
      <h2 class="section-heading">{{ team.heading }}</h2>
      <div class="team-preview__grid leadership-cards">
        {% for person in team.members %}
        <article class="team-preview__card leader-card">
          <figure class="team-preview__media">
            <img src="{{ person.image }}" alt="{{ person.alt }}" loading="lazy" width="320" height="400">
          </figure>
          <h3 class="team-preview__name">{{ person.name }}</h3>
          <p class="team-preview__role">{{ person.role }}</p>
        </article>
        {% endfor %}
      </div>
      <div class="team-preview__cta">
        <a class="btn btn-primary" href="/about/">Meet the Full Team</a>
      </div>
    </div>
  </section>

  <section class="section section--base home-footer-preface">
    <div class="container">
      <p class="muted note">Prefer a briefing? <a class="inline-link" href="/contact/">Contact Investor Relations</a>.</p>
      <div class="home-tagline">
        <p>Amora Vida ‚Äî Building the future of real estate, one landmark at a time.</p>
      </div>
    </div>
  </section>
