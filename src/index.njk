<div class="index-main">
  <section class="section section--slab hero hero--dashboard">
    <div class="container hero__body">
      <div class="hero__intro copy">
        <h1 class="hero__headline">{{ hero.title }}</h1>
        <p class="hero__lead">{{ hero.lead }}</p>
      </div>
      <figure class="hero__media media--hero">
