<script type="module">
  const gallery = document.querySelector('[data-team-gallery]');
  if (gallery) {
    const cards = Array.from(gallery.querySelectorAll('[data-team-card]'));
    let activeCard = null;

    const getToggle = card => card.querySelector('.team-card__toggle');
    const getDetail = card => card.querySelector('.team-card__detail');

    const setExpandedState = (card, expanded) => {
      const toggle = getToggle(card);
      const detail = getDetail(card);
      toggle?.setAttribute('aria-expanded', expanded ? 'true' : 'false');
      if (detail) {
        if (expanded) {
          detail.removeAttribute('hidden');
        } else {
          detail.setAttribute('hidden', '');
        }
      }
    };

    const updateGalleryDim = () => {
      gallery.classList.toggle('team-gallery--dim', Boolean(activeCard));
    };

    const collapseActive = (options = {}) => {
      if (!activeCard) return;
      const card = activeCard;
      setExpandedState(card, false);
      card.classList.remove('is-active');
      activeCard = null;
      updateGalleryDim();
      if (options.focusToggle) {
        getToggle(card)?.focus({ preventScroll: true });
      }
    };

    const showCard = card => {
      if (!card || activeCard === card) return;
      collapseActive();
      setExpandedState(card, true);
      card.classList.add('is-active');
      activeCard = card;
      updateGalleryDim();
      getToggle(card)?.focus({ preventScroll: true });
      requestAnimationFrame(() => {
        card.scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'center' });
      });
    };

    const toggleCard = card => {
      if (activeCard === card) {
        collapseActive();
      } else {
        showCard(card);
      }
    };

    cards.forEach(card => {
      const toggle = getToggle(card);
      const closeBtn = card.querySelector('[data-team-card-close]');

      toggle?.addEventListener('click', event => {
        event.preventDefault();
        toggleCard(card);
      });

      card.addEventListener('click', event => {
        const closeTarget = event.target.closest('[data-team-card-close]');
        if (closeTarget) {
          event.preventDefault();
          event.stopPropagation();
          collapseActive({ focusToggle: true });
          return;
        }

        if (event.target.closest('a')) {
          return;
        }

        toggleCard(card);
      });

      closeBtn?.addEventListener('click', event => {
        event.preventDefault();
        event.stopPropagation();
        if (activeCard === card) {
          collapseActive({ focusToggle: true });
        } else {
          getToggle(card)?.focus({ preventScroll: true });
        }
      });
    });

    document.addEventListener('keydown', event => {
      if (event.key === 'Escape' && activeCard) {
        collapseActive({ focusToggle: true });
      }
    });
  }
</script>

