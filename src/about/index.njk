<section id="leadership" class="section section--base">
  <div class="container">
    <h2 class="section-title">Meet the Team</h2>
    <ul id="team-list" class="team-list" aria-label="Leadership">
      {% for member in teamMembers %}
      <li class="team-member" data-member="{{ member.id }}">
        <div class="team-member__media">
          <img src="{{ member.image.src }}"
               alt="{{ member.image.alt }}" loading="lazy" width="{{ member.image.width }}" height="{{ member.image.height }}">
        </div>
        <div class="team-member__content" role="group" aria-labelledby="name-{{ member.id }}">
          <div class="team-member__intro">
            <p class="team-member__role" id="role-{{ member.id }}">{{ member.role | safe }}</p>
            <h3 id="name-{{ member.id }}" class="team-member__name">{{ member.name }}</h3>
            {% if member.summary %}
            <p class="team-summary">{{ member.summary | safe }}</p>
            {% endif %}
          </div>
          {% if member.bio %}
          <div class="team-member__bio-group">
            {% for paragraph in member.bio %}
            <p class="team-member__bio">{{ paragraph | safe }}</p>
            {% endfor %}
          </div>
          {% endif %}
          <p class="team-member__email"><a href="mailto:{{ member.email }}">{{ member.email }}</a></p>
        </div>
      </li>
      {% endfor %}
    </ul>
  </div>
</section>

