<section id="leadership" class="section">
  <div class="container">
    <div class="section-heading">Leadership</div>
    <h2 class="section-title">Multidisciplinary Team</h2>
    <ul id="team-gallery" class="team-gallery" aria-label="Leadership">
      {% for member in teamMembers %}
      <li class="team-card" data-member="{{ member.id }}">
        <div class="team-card__inner" role="group" aria-labelledby="name-{{ member.id }}">
          <div class="team-card__face team-card__face--front">
            <figure class="team-card__frame" aria-hidden="true">
              <div class="team-card__portrait">
                <img src="{{ member.image.src }}"
                     alt="{{ member.image.alt }}" loading="lazy" width="{{ member.image.width }}" height="{{ member.image.height }}">
              </div>
            </figure>
            <div class="team-card__meta">
              <h3 id="name-{{ member.id }}" class="team-card__name">{{ member.name }}</h3>
              <p class="team-card__role" id="role-{{ member.id }}">{{ member.role | safe }}</p>
              <p class="team-card__email"><a href="mailto:{{ member.email }}">{{ member.email }}</a></p>
            </div>
          </div>
          <div class="team-card__face team-card__face--back" aria-label="Role description" aria-describedby="role-{{ member.id }}">
            <p class="team-card__role team-card__role--back" aria-hidden="true">{{ member.role | safe }}</p>
            <p class="team-card__tagline">{{ member.tagline | safe }}</p>
            <ul class="team-card__bullets">
              {% for bullet in member.bullets %}
              <li>{{ bullet | safe }}</li>
              {% endfor %}
            </ul>
          </div>
        </div>
      </li>
      {% endfor %}
    </ul>
  </div>
</section>

