<form action="https://example.com/form-handler" method="post">
  <div>
    <label for="name">Name</label>
    <input id="name" name="name" type="text" required>
  </div>
  <div>
    <label for="company">Company</label>
    <input id="company" name="company" type="text" required>
  </div>
  <div>
    <label for="email">Email</label>
    <input id="email" name="email" type="email" required>
  </div>
  <div>
    <label for="phone">Phone</label>
    <input id="phone" name="phone" type="tel" required>
  </div>
  <div>
    <label for="intent">Investment Intent</label>
    <select id="intent" name="intent" required>
      <option value="">Select an option</option>
      <option value="land-acquisition">Land acquisition</option>
      <option value="joint-venture">Joint venture</option>
      <option value="financing">Financing partner</option>
      <option value="media">Media / Analyst</option>
    </select>
  </div>
  <div class="consent">
    <input id="consent" name="consent" type="checkbox" required>
    <label for="consent" style="font-weight:400;">I agree to be contacted by Amora Vida and consent to receive the investment pack by email.</label>
  </div>
  <button class="btn btn-primary" type="submit" style="justify-self:start;">Request a Call Back</button>
</form>
