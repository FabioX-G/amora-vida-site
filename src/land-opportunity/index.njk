<script>
(() => {
  const scope = document.querySelector('#palace-history');
  if (!scope) return;
  const scroller = scope.querySelector('.history-scroller');
  const track = scope.querySelector('.history-track');
  if (!scroller || !track) return;

  const cardWidth = () => {
    const card = track.querySelector('.history-card');
    if (!card) return 320;
    const rect = card.getBoundingClientRect();
    return rect.width + 16;
  };

  scroller.setAttribute('tabindex', '0');
  scroller.addEventListener('keydown', event => {
    if (event.key === 'ArrowRight') {
      event.preventDefault();
      scroller.scrollBy({ left: cardWidth(), behavior: 'smooth' });
    }
    if (event.key === 'ArrowLeft') {
      event.preventDefault();
      scroller.scrollBy({ left: -cardWidth(), behavior: 'smooth' });
    }
  });

  let isPointerDown = false;
  let startX = 0;
  let startScroll = 0;

  scroller.addEventListener('pointerdown', event => {
    isPointerDown = true;
    startX = event.clientX;
    startScroll = scroller.scrollLeft;
    scroller.setPointerCapture(event.pointerId);
  });

  scroller.addEventListener('pointermove', event => {
    if (!isPointerDown) return;
    const dx = event.clientX - startX;
    scroller.scrollLeft = startScroll - dx;
  });

  const release = event => {
    if (!isPointerDown) return;
    isPointerDown = false;
    try {
      scroller.releasePointerCapture(event.pointerId);
    } catch (e) {
      /* ignore */
    }
  };

  scroller.addEventListener('pointerup', release);
  scroller.addEventListener('pointercancel', release);
})();
</script>

